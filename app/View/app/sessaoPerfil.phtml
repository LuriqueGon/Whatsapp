                p2.textContent = number[2].slice(0,5) + '-' + number[2].slice(5)

                let icons = document.createElement('div')
                icons.classList.add('icons')

                let i2 = document.createElement('i')
                i2.className = 'fa-solid fa-trash-can'
                i2.id = 'recSolici'
                i2.setAttribute('onclick', `cancelarSolicitacao(${e[1]})`)

                let abbr2 = document.createElement('abbr')
                abbr2.title = 'Cancelar Solicitação'

                abbr2.appendChild(i2)

                icons.appendChild(abbr2)

                pessoalInfo.appendChild(p1)
                pessoalInfo.appendChild(p2)

                imgWrapper.appendChild(img)

                infoWrapper.appendChild(imgWrapper)
                infoWrapper.appendChild(pessoalInfo)

                card.appendChild(infoWrapper)
                card.appendChild(icons)

                $('.cardGroup').append(card)
            });
        }else{
            $('.cardGroup').html('<h2>Nenhuma Solicitação Enviada</h2>')
