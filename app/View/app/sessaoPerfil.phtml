                if(e[0]['img'] == '' || e[0]['img'] == null){
                    img.src = 'img/perfilNoUser.png'
                }else{
                    img.src = e[0]['img']
                }

                let pessoalInfo = document.createElement('div')
                pessoalInfo.classList.add('pessoalInfo')

                let p1  = document.createElement('p')
                p1.textContent = e[0]['nome'].split(' ')[0]

